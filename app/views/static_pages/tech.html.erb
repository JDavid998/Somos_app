      <h1>Soluciona tu cuadratica!</h1>
      <div class="text-sm font-normal font-roboto-mono text-justify text-white mt-1">
  <form action="#" onsubmit="Calcular(event)" class="space-y-2">
          <div>
            <label for="a" class="block">Coeficiente a:</label>
            <input type="number" id="a" name="a"  required class="w-full p-2 border border-gray-300 rounded">
          </div>
          <div>
            <label for="b" class="block">Coeficiente b:</label>
            <input type="number" id="b" name="b" required class="w-full p-2 border border-gray-300 rounded">
          </div>
          <div>
            <label for="c" class="block">Coeficiente c:</label>
            <input type="number" id="c" name="c" required class="w-full p-2 border border-gray-300 rounded">
          </div>
          <div class="flex space-x-2">
            <button type="submit" class="flex-1 bg-yellow-400 text-black font-bold py-2 px-4 rounded hover:bg-yellow-300 mb-4">Calcular</button>
            <button type="button" onclick="toggleCodigoCuadratica()" class="flex-1 bg-gray-700 text-white font-bold py-2 px-4 rounded hover:bg-gray-600 mb-4">Ver código</button>
          </div>
        </form>
       <div id="resultado" class="mt-6 text-center font-bold">
        </div>
        <script>
          function Calcular(event) {
            event.preventDefault();
            const a = parseFloat(document.getElementById('a').value);
            const b = parseFloat(document.getElementById('b').value);
            const c = parseFloat(document.getElementById('c').value);
            const resultadoDiv = document.getElementById('resultado');
            if (a === 0) {
              resultadoDiv.textContent = 'El coeficiente "a" no puede ser cero.';
              return;
            }
            const discriminante = b * b - 4 * a * c;
            if (discriminante < 0) {
              resultadoDiv.textContent = 'La ecuación no tiene soluciones reales.';
              return;
            }
            const x1 = (-b + Math.sqrt(discriminante)) / (2 * a);
            const x2 = (-b - Math.sqrt(discriminante)) / (2 * a);
            resultadoDiv.className = 'resultado';
            if (x1 === x2) {
              resultadoDiv.innerHTML = `<div class="ecuacion">${a}x² + ${b}x + ${c} = 0</div><p><strong>Solución única: x = ${x1}</strong></p>`;
            } else {
              resultadoDiv.innerHTML = `<div class="ecuacion">${a}x² + ${b}x + ${c} = 0</div><p><strong>x₁ = ${x1}</strong></p><p><strong>x₂ = ${x2}</strong></p>`;
            }
          }
        </script>
            
